<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.accounting.system.controller.MainController"
            style="-fx-background-color: #f5f5f5;">
    
    <top>
        <HBox spacing="10" style="-fx-background-color: #2f4050; -fx-padding: 10;">
            <Label text="Accounting System" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" 
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="1" style="-fx-background-color: #2f4050;" prefWidth="200">
            <Button text="Voucher Management" maxWidth="Infinity" 
                    style="-fx-background-color: #3c8dbc; -fx-text-fill: white; -fx-padding: 15; -fx-border-width: 0; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </Button>
            <Button text="Ledger Management" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 15; -fx-border-width: 0; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </Button>
            <Button text="Period-End Closing" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 15; -fx-border-width: 0; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </Button>
            <Button text="Financial Reports" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 15; -fx-border-width: 0; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </Button>
            <Button text="Basic Settings" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 15; -fx-border-width: 0; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </Button>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="searchField" promptText="Search vouchers..." 
                          style="-fx-pref-width: 200px;"/>
                <Label text="Date Range:" style="-fx-font-size: 14px;"/>
                <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
                <DatePicker fx:id="endDatePicker" promptText="End Date"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addButton" text="Add" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="editButton" text="Edit" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="deleteButton" text="Delete" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button fx:id="verifyButton" text="Verify" 
                        style="-fx-background-color: #FFC107; -fx-text-fill: black;"/>
            </HBox>
            
            <TableView fx:id="voucherTable" style="-fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="voucherNoColumn" text="Voucher No" prefWidth="100"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
            
            <Pagination fx:id="pagination" style="-fx-background-color: white;"/>
        </VBox>
    </center>
</BorderPane> 